{
  "name": "movie-management-backend",
  "version": "1.0.0",
  "description": "Backend application for managing favorite movies and TV shows",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:build": "tsc --watch",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "postinstall": "prisma generate",
    "setup:dev": "copy prisma\\schema.sqlite.prisma prisma\\schema.prisma && npm run db:generate && npm run db:migrate:dev",
    "setup:mysql": "copy prisma\\schema.mysql.prisma prisma\\schema.prisma && npm run db:generate && npm run db:migrate:dev",
    "setup:prod": "npm run db:generate && npm run db:migrate"
  },
  "keywords": [
    "movies",
    "tv-shows",
    "express",
    "prisma",
    "mysql"
  ],
  "author": "",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mysql2": "^3.14.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "prisma": "^5.7.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
